<Page
    x:Class="FinalProject.enter_direct"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FinalProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
       
        <StackPanel Margin="100">

            <Button x:Name="di" Click="di_Click_1" Margin="50" Content="לשינויים במערכת השעות" FontSize="50" Width="660" Height="150"  HorizontalAlignment="Center" VerticalAlignment="Top"></Button>
            <Button x:Name="d2"  Margin="50" Click="d2_Click" Content="מדריכות" FontSize="50" Width="660" Height="150"  HorizontalAlignment="Center" VerticalAlignment="Top"></Button>
            <Button x:Name="d" Click="d_Click_1" Margin="50" Content="לקוחות" FontSize="50" Width="660" Height="150" HorizontalAlignment="Center"  VerticalAlignment="Top"></Button>
        </StackPanel>
        <Button VerticalAlignment="Top"  HorizontalAlignment="Right" Click="Button_Click" Margin="20"  Height="100" Width="100">
            <SymbolIcon Symbol="Forward"></SymbolIcon>
        </Button>
    </Grid>
</Page>
