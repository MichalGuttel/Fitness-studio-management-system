<Page
    x:Class="FinalProject.new_client"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FinalProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock Text="הכנסת לקוחה חדשה" HorizontalAlignment="Center" FontSize="50"></TextBlock>
        <StackPanel HorizontalAlignment="Right" Margin="50" FlowDirection="RightToLeft">
            <TextBox x:ConnectionId='7' x:Name="cl1"  Width="700" Header=" תעודת זהות" FontSize="50" ></TextBox>
            <TextBox x:ConnectionId='8' x:Name="cl2" Width="700" Header=" שם פרטי" FontSize="50" ></TextBox>
            <TextBox x:ConnectionId='9' x:Name="cl3" Width="700" Header=" שם משפחה" FontSize="50" ></TextBox>
            <TextBox x:ConnectionId='10' x:Name="cl4" Width="700" Header="שם עיר" FontSize="50" ></TextBox>
            <TextBox x:ConnectionId='11' x:Name="cl5" Width="700" Header="מספר פלאפון " FontSize="50" ></TextBox>
            <TextBox x:ConnectionId='12' x:Name="cl6" Width="700" Header=" כתובת מייל" FontSize="50"  ></TextBox>
        </StackPanel>
        <Button x:ConnectionId='2' Margin="50" VerticalAlignment="Bottom" Content="להכנסת הלקוחה" FontSize="20"                      Width="200" Height="100"></Button>
        <Button x:ConnectionId='3' VerticalAlignment="Top" HorizontalAlignment="Right"                        Margin="10"  Height="50" Width="50">
            <SymbolIcon Symbol="Forward"></SymbolIcon>
        </Button>
        <Popup x:ConnectionId='4' x:Name="p2" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Border BorderBrush="Black" BorderThickness="10">
                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom">
                    <TextBlock x:ConnectionId='5' x:Name="txt10" Text="הלקוחה הוספה בהצלחה" Foreground="Black" FontSize="50" ></TextBlock>
                    <TextBlock Text="" Foreground="Black" FontWeight="Bold" Margin="5" FontSize="50"></TextBlock>
                    <StackPanel Orientation="Horizontal">
                        <Button x:ConnectionId='6' x:Name="closeb"                      Background="Pink" FontWeight="Bold" FontSize="30" Margin="10" HorizontalAlignment="Center" Content="סגירה" ></Button>
                    </StackPanel>
                </StackPanel>  
            </Border>
           </Popup>
    </Grid>
</Page>

