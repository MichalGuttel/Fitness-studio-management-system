<Page
    x:Class="FinalProject.enter_private"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FinalProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox Header="נא הכניסי את שמך" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="70"></TextBox>
            <TextBox x:ConnectionId='3' x:Name="txt1" Header="נא הכניסי מספר תעודת זהות" FontSize="70" HorizontalAlignment="Right" VerticalAlignment="Center" ></TextBox>
            <TextBlock x:ConnectionId='4' x:Name="tb" Text="הפרטים שגויים נא הכנס שנית!" Foreground="Red" FontSize="40" FontWeight="Bold" Margin="5" Visibility="Collapsed"></TextBlock>
            <Button x:ConnectionId='5' HorizontalAlignment="Center"  Margin="40"                   x:Name="tf" Content="המשך" Width="150" Height="100 "></Button>
        </StackPanel>
        <Button x:ConnectionId='2' VerticalAlignment="Top" HorizontalAlignment="Right"                      Margin="20"  Height="100" Width="100">
            <SymbolIcon Symbol="Forward"></SymbolIcon>
        </Button>
    </Grid>
</Page>

