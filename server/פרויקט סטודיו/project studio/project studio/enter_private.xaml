<Page
    x:Class="project_studio.enter_private"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:project_studio"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel VerticalAlignment="Center">
        <TextBox Header="נא הכניסי את שמך" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="50"></TextBox>
        <TextBox Header="נא הכניסי מספר תעודת זהות" FontSize="50" HorizontalAlignment="Right" VerticalAlignment="Center" ></TextBox>
        <Button HorizontalAlignment="Right"  Margin="30"  Click="tf_Click" x:Name="tf" Content="המשך" Width="150" Height="100 "></Button>
        </StackPanel>
        <Button VerticalAlignment="Top" HorizontalAlignment="Right" Click="Button_Click" Margin="20"  Height="100" Width="100">
            <SymbolIcon Symbol="Forward"></SymbolIcon>
        </Button>
    </Grid>
</Page>
